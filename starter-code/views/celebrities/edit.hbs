{{> mainNav}}
<h1 class="main-title">Editing celebrity</h1>
{{#with celebrity}}
<form action="/celebrities/edit" method="post" class="form">
<input type="hidden" name="_id" value="{{_id}}">
  <div class="form__field">
    <input type="text" id="name" name="name" value="{{name}}" placeholder="Name"
      class="form__input form__input--text">
  </div>
  <div class="form__field">
    <input type="text" id="occupation" name="occupation"
      value="{{occupation}}" placeholder="Occupation" class="form__label">
  </div>
  <div class="form__field">
    <input type="text" id="catch-phrase" name="catchPhrase"
      value="{{catchPhrase}}" placeholder="Catch phrase" class="form__input form__input--text">
  </div>
  <div class="form__actions">
    <input type="submit" value="Update" class="button button--create form__submit">
  </div>
</form>
